<form class="form-signin mt-5" action="/login" method="post">
    <div class="text-center mb-4">
        <img class="mb-4" src="/images/bootstrap-logo.svg" alt="" width="72" height="72">
        <h3>Tech Blog Login</h3>
    </div>

    <div class="form-label-group">
        <input type="email" name="email" class="form-control" placeholder="Email address" autofocus>
        <label for="inputEmail">Email address</label>
    </div>

    <div class="form-label-group">
        <input type="password" name="password" class="form-control" placeholder="Password">
        <label for="inputPassword">Password</label>
    </div>

    <div class="d-grid gap-2">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </div>
</form>